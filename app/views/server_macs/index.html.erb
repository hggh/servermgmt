<h1>Listing servermacs</h1>

<table>
  <tr>
    <th>Comment</th>
    <th>Mac</th>
    <th>Server</th>
  </tr>

<% for servermac in @servermacs %>
  <tr>
    <td><%=h servermac.comment %></td>
    <td><%=h servermac.mac %></td>
    <td><%=h servermac.Server %></td>
    <td><%= link_to 'Show', servermac %></td>
    <td><%= link_to 'Edit', edit_servermac_path(servermac) %></td>
    <td><%= link_to 'Destroy', servermac, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

