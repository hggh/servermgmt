<h1>Server Groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Members</th>
  </tr>

<% @server_groups.each do |server_group| %>
  <tr>
    <td><%=h server_group.name %></td>
    <td style="text-align:center"><%=h server_group.server_group_members.count %></td>
    <td><%= link_to 'Show', server_group %></td>
    <td><%= link_to 'Edit', edit_server_group_path(server_group) %></td>
    <td><%= link_to 'Destroy', server_group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Server Group', new_server_group_path %>
