<%= render :partial => "menubar" %>
<h1>Show: <%=h @configkey.name %></h1>
<br/>

<table>
	<tr>
		<td>Name:</td>
		<td><%=h @configkey.name %></td>
	</tr>
	<tr>
    <td>Default:</td>
		<td><%=h @configkey.default %></td>
	</tr>
	<tr>
		<td valign="top">Servers/Groups:</td>
		<td valign="top">
			<% if @configkey.configkey_values.count > 0 %>
        <% @configkey.configkey_values.each do |cfg| %>
				  <% if cfg.server_id %>
				  <%= link_to "#{cfg.server.fqdn}", cfg.server %>
					<% else %>
					<%= link_to "#{cfg.server_group.name}", cfg.server_group %>
					<% end %>
					<br/>
				<% end %>
			<% else %>
			- no servers found -
			<% end %>
		</td>
	</tr>
</table>


<%= link_to 'Edit', edit_configkey_path(@configkey) %> |
<%= link_to 'Back', configkeys_path %>