<%= render :partial => "network_menubar" %>
<h1>Network - Edit: <%=h @network.network %></h1>
<br/>

<% form_for(@network) do |f| %>
  <%= f.error_messages %>
<table>
  <tr>
    <td>Customer:</td>
    <td><%= f.select :customer_id,Customer.find(:all).collect{|d| [d.name,d.id]} %></td>
  </tr>
	<tr>
		<td>Network:</td>
		<td><%=h @network.network %></td>
	</tr>
	<tr>
		<td>Comment:</td>
		<td><%= f.text_field :comment %></td>
	</tr>
	<tr>
		<td colspan="2"><%= f.submit "Update" %></td>
	</tr>
</table>
<% end %>
